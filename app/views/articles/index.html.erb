<h1>My Articles</h1>
<% @articles.each do |article| %>
<div>
  <%= link_to "#{article.title}", article_path("#{article.id}") %>
</div>
<div>
  <%= link_to "Delete",
            article_path(article.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
</div>
<br>
<% end %>
<br>
<%= link_to "+ Add a new article", new_article_path %>
